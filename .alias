# Fuzzy open 
function op() {
    sel=$(tv files)
    open $sel
}

# Fuzzy select and change directory
function fcd() {
    sel=$(fd -t d | fzf)
    cd $sel
}

# Make a directory and then change into that directory
function take() {
    mkdir $1
    cd $1
}

